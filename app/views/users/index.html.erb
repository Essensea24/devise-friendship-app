<% @users.each do |u| %>
	<tr>
		<td><%= u.firstname %></td><br>
		<td><%= image_tag u.image(:large)%></td><br>
		<td><%= link_to "Send Message", "#", class: "btn btn-success btn-xs start-conversation",
	                    "data-sid" => current_user.id, "data-rip" => u.id %>

      		</td><br>
      		<td><%= link_to "Add Friend", friendships_create_path(:friend_id => u), :method => :post %></td><br>
      	</tr>
<% end %>


